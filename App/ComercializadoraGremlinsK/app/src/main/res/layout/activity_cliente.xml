<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.ClienteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese los datos de cliente"
            android:textColor="@color/bluenormal4"
            android:textSize="25sp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="25dp">
        </TextView>

        <Spinner
            android:id="@+id/sp_tipodoc"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp">
        </Spinner>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Numero de documento"
            android:id="@+id/txt_numdoc"
            android:textColorHint="@color/bluedark4"
            android:textColor="@color/bluedark4"
            android:backgroundTint="@color/bluenormal4"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:textSize="15sp">
        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nombre"
            android:id="@+id/txt_nombre"
            android:textColorHint="@color/bluedark4"
            android:textColor="@color/bluedark4"
            android:backgroundTint="@color/bluenormal4"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:textSize="15sp">
        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Direccion"
            android:id="@+id/txt_direccion"
            android:textColorHint="@color/bluedark4"
            android:textColor="@color/bluedark4"
            android:backgroundTint="@color/bluenormal4"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:textSize="15sp">
        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Telefono"
            android:id="@+id/txt_telefono"
            android:textColorHint="@color/bluedark4"
            android:textColor="@color/bluedark4"
            android:backgroundTint="@color/bluenormal4"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:inputType="number">
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_agregar"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="Agregar"
                android:textSize="16sp"
                android:height="60dp"
                android:background="@drawable/rounded_button">

            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_cancelar"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="Cancelar"
                android:textSize="16sp"
                android:height="60dp"
                android:background="@drawable/rounded_button">

            </Button>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>